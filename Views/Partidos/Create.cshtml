@model Identidad.Models.Partido

@{
    ViewData["Title"] = "Agregar Partido";
}


<div style="margin-left=2EM">
    <h1>Agregar Partido</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Jugador1Id" class="control-label font2b"></label>
                    <input asp-for="Jugador1Id" class="form-control font2" />
                    <span asp-validation-for="Jugador1Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Jugador2Id" class="control-label font2b"></label>
                    <input asp-for="Jugador2Id" class="form-control font2" />
                    <span asp-validation-for="Jugador2Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ZonaId" class="control-label font2b"></label>
                    <input asp-for="ZonaId" class="form-control font2" />
                    <span asp-validation-for="ZonaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EtapaId" class="control-label font2b"></label>
                    <select asp-for="EtapaId" class="form-control font2" asp-items="ViewBag.EtapaId">
                        <option value="">Seleccione una Etapa...</option>

                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="PartidoNumero" class="control-label font2b"></label>
                    <input asp-for="PartidoNumero" class="form-control font2" />
                    <span asp-validation-for="PartidoNumero" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Cerrado" /> @Html.DisplayNameFor(model => model.Cerrado)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Ganador" class="control-label font2b"></label>
                    <input asp-for="Ganador" class="form-control font2" />
                    <span asp-validation-for="Ganador" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar" class="btn btn-primary font2" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="font2" asp-action="Index">Volver a la Lista</a>
    </div>
</div>

