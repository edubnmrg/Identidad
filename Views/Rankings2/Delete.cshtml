@model Identidad.Models.Ranking2

@{
    ViewData["Title"] = "Eliminar Ranking";
}

    <div style="margin-left:3EM">
        <h1>Eliminar Ranking</h1>

        <h3>Esta seguro de eliminar este Ranking?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2 font2b">
                    @Html.DisplayNameFor(model => model.Perfil.nombre)
                </dt>
                <dd class="col-sm-10 font2">
                    @Html.DisplayFor(model => model.Perfil.NombreCompleto)
                </dd>
                <dt class="col-sm-2 font2b">
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>
                <dd class="col-sm-10 font2">
                    @Html.DisplayFor(model => model.Categoria)
                </dd>
                <dt class="col-sm-2 font2b">
                    @Html.DisplayNameFor(model => model.Fecha)
                </dt>
                <dd class="col-sm-10 font2">
                    @Html.DisplayFor(model => model.Fecha)
                </dd>
                <dt class="col-sm-2 font2b">
                    @Html.DisplayNameFor(model => model.Puntos)
                </dt>
                <dd class="col-sm-10 font2">
                    @Html.DisplayFor(model => model.Puntos)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="RankingID" />
                <input type="submit" value="Eliminar" class="btn btn-danger font2" /> <br />
            </form>
            <a class="font2" asp-action="Index">Volver a la Lista</a>

        </div>
    </div>
