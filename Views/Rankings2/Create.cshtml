@model Identidad.Models.Ranking2

@{
    ViewData["Title"] = "Agregar Ranking";
}

<div style="margin-left:3EM">
    <h1>Agregar Ranking</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PerfilID" class="control-label font2b"></label>
                    <input asp-for="PerfilID" class="form-control font2" />
                    <span asp-validation-for="PerfilID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categoria" class="control-label font2b"></label>
                    <input asp-for="Categoria" class="form-control font2" />
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fecha" class="control-label font2b"></label>
                    <input type="date" asp-for="Fecha" class="form-control font2" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Puntos" class="control-label font2b"></label>
                    <input asp-for="Puntos" class="form-control font2" />
                    <span asp-validation-for="Puntos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar" class="btn btn-primary font2" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="font2" asp-action="Index">Volver a la Lista</a>
    </div>

</div>
