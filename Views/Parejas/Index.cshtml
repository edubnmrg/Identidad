@model IEnumerable<Identidad.Models.Pareja>

@{
    ViewData["Title"] = "Parejas";
}

<h1>Parejas</h1>

<p>
    <a class="font2 " asp-action="Create">Agregar</a>
</p>
<table class="table table-stripped">
    <thead class="table-dark">
        <tr class= font2b>
            <th>
                @Html.DisplayNameFor(model => model.Jugador1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jugador2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Jugador1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jugador2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePareja)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ParejaID">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.ParejaID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
