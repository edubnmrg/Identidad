@model Identidad.Models.Recursos.SistemaTorneo

@{
    ViewData["Title"] = "Editar Sistemas Torneos";
}

    <div style="margin-left:3EM">
        <h1>Editar Sistemas Torneos</h1>

        <hr />
        <div class="row font2">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="sisTorID" />
                    <div class="form-group">
                        <label asp-for="sisTor" class="control-label font2b required-field"></label>
                        <input asp-for="sisTor" class="form-control font2" />
                        <span asp-validation-for="sisTor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CantSets" class="control-label font2b required-field"></label>
                        <input asp-for="CantSets" class="form-control font2" />
                        <span asp-validation-for="CantSets" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Puntos" class="control-label font2b required-field"></label>
                        <input asp-for="Puntos" class="form-control font2" />
                        <span asp-validation-for="Puntos" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary font2" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="font2 " asp-action="Index">Volver a la Lista</a>
        </div>
    </div>

