@model Identidad.Models.Recursos.Categoria

@{
    ViewData["Title"] = "Detalle Categoria";
}
    <div class="container-fluid" style="margin-left:3EM">

        <h1>Detalle Categoria</h1>

        <div class="font2">

            <hr />
            <dl class="row">
                <dt class="col-sm-2 font2b">
                    @Html.DisplayNameFor(model => model.categoria)
                </dt>
                <dd class="col-sm-10 font2">
                    @Html.DisplayFor(model => model.categoria)
                </dd>
                <dt class="col-sm-2 font2b">
                    @Html.DisplayNameFor(model => model.Color)
                </dt>
                <dd class="col-sm-10 font2" style="background-color:@Model.Color">
                    @Html.DisplayFor(model => model.Color)
                </dd>
            </dl>
        </div>
        <div>
            <a class="font2 " asp-action="Edit" asp-route-id="@Model.categoriaID">Editar</a><br />
            <a class="font2 " asp-action="Index">Volver a la Lista</a>
        </div>
</div>
