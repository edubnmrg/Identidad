@model Identidad.Models.Recursos.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}
    <div class="container-fluid" style="margin-left:3EM">

        <h1>Editar Categoria</h1>


        <div class="row font2">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="categoriaID" />
                    <div class="form-group">
                        <label asp-for="categoria" class="control-label font2b"></label>
                        <input asp-for="categoria" class="form-control font2" />
                        <span asp-validation-for="categoria" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Color" class="control-label font2b"></label>
                        <input type="color" asp-for="Color" class="form-control font2" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary font2" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="font2 " asp-action="Index">Volver a la Lista</a>
        </div>

</div>
