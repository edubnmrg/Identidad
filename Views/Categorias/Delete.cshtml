@model Identidad.Models.Recursos.Categoria

@{
    ViewData["Title"] = "Eliminar Categoria";
}
    <div class="container-fluid" style="margin-left:3EM">

        <h1>Eliminar Categoria</h1>

        <h3>Esta seguro de eliminar esta categoria?</h3>
        <div class="font2">

            <hr />
            <dl class="row">
                <dt class="col-sm-2 font2b">
                    @Html.DisplayNameFor(model => model.categoria)
                </dt>
                <dd class="col-sm-10 font2">
                    @Html.DisplayFor(model => model.categoria)
                </dd>
                <dt class="col-sm-2 font2b">
                    @Html.DisplayNameFor(model => model.Color)
                </dt>
                <dd class="col-sm-10 font2" style="background-color:@Model.Color">
                    @Html.DisplayFor(model => model.Color)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="categoriaID" />
                <input type="submit" value="Eliminar" class="btn btn-danger font2" />
            </form>
            <a class="font2 " asp-action="Index">Volver a la Lista</a>

        </div>
</div>
