@model Identidad.Models.Recursos.Etapa

@{
    ViewData["Title"] = "Editar Etapa";
}

<h1>Editar Etapa</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EtapaId" />
            <div class="form-group">
                <label asp-for="NombreEtapa" class="control-label font2b"></label>
                <input asp-for="NombreEtapa" class="form-control font2" />
                <span asp-validation-for="NombreEtapa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary font2" /><br />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="font2" asp-action="Index">Volver a la Lista</a>
</div>

