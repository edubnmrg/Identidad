@model Identidad.Models.Calle

@{
    ViewData["Title"] = "Eliminar Calle";
}
<div class="container-fluid" style="margin-left:3EM">

    <h1>Eliminar Calle</h1>

    <h3>Esta seguro de eliminar esta calle?</h3>
    <div class="font2" >
        <hr />
        <dl class="row">
            <dt class="col-sm-2 font2b">
                @Html.DisplayNameFor(model => model.nombre)
            </dt>
            <dd class="col-sm-10 font2" style="width:auto">
                @Html.DisplayFor(model => model.nombre)
            </dd>

        </dl>

        <form class="font2" asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Eliminar" class="btn btn-danger font2" />
        </form>
        <a class="font2" asp-action="Index">Volver a la Lista</a>

    </div>
</div>