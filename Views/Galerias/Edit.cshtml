@model Identidad.Models.Galeria

@{
    ViewData["Title"] = "Edit";
    var photoPath = "~/img/Galeria/" + (Model.FotoPath ?? "5q.png");

}

<h1>Edit</h1>

<h4>Galeria</h4>
<hr />
<div class="row font2" style="margin-left:2EM">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GaleriaId" />
            <img id="imagen" src="@photoPath" style="border:2px solid;max-height:100px" asp-append-version="true" />

            <div class="form-group">
                <label asp-for="FotoPath" class="control-label font2b"></label>
                <input asp-for="FotoPath" class="form-control" />
                <span asp-validation-for="FotoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label font2b"></label>
                <input type="date" asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nota" class="control-label font2b"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary font2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

