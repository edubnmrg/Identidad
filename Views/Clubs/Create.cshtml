@model Club

@{
    ViewData["Title"] = "Agregar Club";
}

<h1>Agregar Club</h1>

<hr />
<div class="row font2">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreClub" class="control-label font2b"></label>
                <input asp-for="NombreClub" class="form-control font2" />
                <span asp-validation-for="NombreClub" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiglaClub" class="control-label font2b"></label>
                <input asp-for="SiglaClub" class="form-control font2" />
                <span asp-validation-for="SiglaClub" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calle" class="control-label font2b"></label>
                <input asp-for="Calle" class="form-control font2" />
                <span asp-validation-for="Calle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Altura" class="control-label font2b"></label>
                <input asp-for="Altura" class="form-control font2" />
                <span asp-validation-for="Altura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ciudad" class="control-label font2b"></label>
                <input asp-for="Ciudad" class="form-control font2" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProvinciaID" class="control-label font2b"></label>
                <select asp-for="ProvinciaID" class="form-control font2" asp-items="ViewBag.provinciaID">
                    <option value="">Elija una provincia...</option>
                </select>                
                <span asp-validation-for="ProvinciaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubEmail" class="control-label font2b"></label>
                <input asp-for="ClubEmail" class="form-control font2" />
                <span asp-validation-for="ClubEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubUrl" class="control-label font2b"></label>
                <input asp-for="ClubUrl" class="form-control font2" />
                <span asp-validation-for="ClubUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label font2b"></label>
                <input asp-for="Telefono" class="form-control font2" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FederacionID" class="control-label font2b"></label>
                <select asp-for="FederacionID" class="form-control font2" asp-items="ViewBag.FedID">
                    <option value="">Elija una federacion...</option>
                </select>                
                <span asp-validation-for="FederacionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary font2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="font2 " asp-action="Index">Volver a la Lista</a>
</div>

