@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reestablecer Contraseña";
}

<h2>Reset Password</h2>
<hr />
<div class="row font2">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Token" type="hidden" />
            <input asp-for="Email" type="hidden" />
            <div class="form-group">
                <label asp-for="Password"class="font2b requiered-field"></label>
                <input asp-for="Password" class="form-control font2" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"class="font2b requiered-field"></label>
                <input asp-for="ConfirmPassword" class="form-control font2" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary font2">Reestablecer</button>
        </form>
    </div>
</div>

