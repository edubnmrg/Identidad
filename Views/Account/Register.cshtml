@model RegisterViewModel
@{
    ViewData["Title"] = "Registrarse";
}

<h1>Registrarse</h1>
<div class="row font2 fondo" style="margin-left:20px">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="font2b requiered-field"></label>
                <input asp-for="Email" class ="form-control font2" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"class="font2b requiered-field"></label>
                <input asp-for="Password" class="form-control font2" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"class="font2b requiered-field"></label>
                <input asp-for="ConfirmPassword" class="form-control font2" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary font2">Registrarse</button>
        </form>
    </div>
</div>
