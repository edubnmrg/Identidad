@model Identidad.Models.Recursos.TipoDocumento

@{
    ViewData["Title"] = "Crear Tipo de Documento";
}
    <div class="container-fluid" style="margin-left:3EM">

        <h1>Crear Tipo de Documento</h1>

        <div class="row font2">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="tipoDeDocumento" class="control-label font2b"></label>
                        <input asp-for="tipoDeDocumento" class="form-control" />
                        <span asp-validation-for="tipoDeDocumento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary font2" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="font2 " asp-action="Index">Volver a la Lista</a>
        </div>

</div>