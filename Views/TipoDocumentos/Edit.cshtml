@model Identidad.Models.Recursos.TipoDocumento

@{
    ViewData["Title"] = "Editar Tipo de Documento";
}
    <div class="container-fluid" style="margin-left:3EM">

        <h1>Editar Tipo de Documento</h1>

        <hr />
        <div class="row font2">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="tipoDeDocumento" class="control-label font2b">Tipo de Documento</label>
                        <input asp-for="tipoDeDocumento" class="form-control font2" />
                        <span asp-validation-for="tipoDeDocumento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Abreviacion" class="control-label font2b">Abreviacion</label>
                        <input asp-for="Abreviacion" class="form-control font2" />
                        <span asp-validation-for="Abreviacion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary font2" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="font2">Volver a la Lista</a>
        </div>

</div>