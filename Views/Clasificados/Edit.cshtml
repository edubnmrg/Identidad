@model Identidad.Models.Clasificado

@{
    ViewData["Title"] = "Editar Clasificados";
}

    <h1>Editar Clasificados</h1>

<hr />
<div class="row" style="margin-left=3EM">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClasificadoID" />
            <div class="form-group">
                <label asp-for="TorneoID" class="control-label font2b"></label>
                <input asp-for="TorneoID" class="form-control font2" />
                <span asp-validation-for="TorneoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerfilID" class="control-label  font2b"></label>
                <input asp-for="PerfilID" class="form-control font2" />
                <span asp-validation-for="PerfilID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Puesto" class="control-label  font2b"></label>
                <input asp-for="Puesto" class="form-control font2" />
                <span asp-validation-for="Puesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promedio" class="control-label font2b"></label>
                <input asp-for="Promedio" class="form-control font2" />
                <span asp-validation-for="Promedio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary font2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="font2" asp-action="Index">Volver a la Lista</a>
</div>

